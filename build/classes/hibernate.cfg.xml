<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

    <property name="hibernate.connection.driver_class" >com.mysql.jdbc.Driver</property>

    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/isearch2</property>

    <property name="hibernate.connection.username">zl</property>

    <property name="hibernate.connection.password">tiger</property>

    <property name="show_sql">true</property>

    <property name="hibernate.hbm2ddl.auto">update</property>

    <mapping resource="shu/mike/bean/User.hbm.xml"/>

    <mapping resource="shu/mike/bean/UserFile.hbm.xml"/>

    <mapping resource="shu/mike/bean/History.hbm.xml"/>

    <mapping resource="shu/mike/bean/AnalyticsToken.hbm.xml"/>

    <mapping resource="shu/mike/bean/LoginLog.hbm.xml"/>

    <mapping resource="shu/mike/bean/ResourceManagerLog.hbm.xml"/>

    <mapping resource="shu/mike/bean/User_Role.hbm.xml"/>

    <mapping resource="shu/mike/bean/Role_Permission.hbm.xml"/>

    <mapping resource="shu/mike/bean/Role.hbm.xml"/>

    <mapping resource="shu/mike/bean/Permission.hbm.xml"/>

    <mapping resource="shu/mike/ikanalyzer/Stopwords.hbm.xml"/>

    <mapping resource="shu/mike/manage/SearchServer.hbm.xml"/>

    <mapping resource="shu/mike/manage/ManageInfo.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
